<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_log_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠ SYSTEM LOCKDOWN ⚠"
        android:textColor="#FF5252"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cognitive limits exceeded.\nYou are trapped in Cyberspace."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="8dp" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the KEY in the distorted memories to escape."
        android:textColor="#00E676"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/inputUnlockKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tech_input_border"
        android:hint="_ _ _ _"
        android:textColor="#FF5252"
        android:textColorHint="#55FF5252"
        android:textSize="24sp"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnUnlock"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="DECRYPT &amp; RESUME"
        android:textColor="#000000"
        android:backgroundTint="#FF5252"
        android:textStyle="bold" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System auto-reset: 5m cooldown"
        android:textColor="#55FFFFFF"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp" />

</LinearLayout>
